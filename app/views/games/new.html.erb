<div class="container">

  <h1 class="text-left">New Game</h1>
    <ul class="list-group list-group-horizontal-lg mt-4">
    <% @letters.each do |letter| %>
      <li class="list-group-item mr-2 blue"><%= letter %></li>
    <% end %>
    </ul>

    <p class="form-prefix mt-3">What is the longest word you can find?</p>

    <form action="/score" method="post" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
        <div class="input-group input-group">
            <input type="text" class="form-control" name="word" id="word" placeholder="Type a word">
            <span class="input-group-btn">
              <input type="submit" value="Play" class="btn btn-primary">
            </span>
      </div>
    </form>
</div>